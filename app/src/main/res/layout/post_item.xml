<?xml version="1.0" encoding="utf-8"?>

<!--3....Post in recycler view to show-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/postImage"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is android app for blog to show on most topics on your demand"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            style="@style/Base.TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/postDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:text="Now suppose that we want print the size of a file whose pathname has spaces in it; e.g. /home/steve/Test
                            File.txt . If we run the command like this:"
            style="@style/TextAppearance.AppCompat.Body2"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

<!--elevation= looks raised,  elipsesize= ... at end if line exceeds, maxlines= no. of lines to show-->